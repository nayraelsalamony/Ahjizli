<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cl2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="183dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Ahjiz li"
        android:textColor="#0E0E0E"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="275dp"
        android:layout_height="366dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:background="#B2FFFFFF"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:cardBackgroundColor="#B2FBFAEB"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="366dp">

            <Button
                android:id="@+id/register"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginBottom="106dp"
                android:background="@drawable/btn"
                android:onClick="userregister"
                android:text="register"
                android:textColor="#070707"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="21dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:autoText="true"
                android:drawableLeft="@drawable/icon"
                android:ems="10"
                android:fadingEdge="horizontal|vertical"
                android:hint="   E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="#8D090909" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"

                android:layout_centerInParent="true"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/icc"
                android:ems="10"
                android:hint="  Password"
                android:inputType="textPassword"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHint="#8C000000" />

            <Button
                android:id="@+id/login"
                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="153dp"
                android:background="@drawable/btn"
                android:onClick="login"
                android:text="Log in"
                android:textColor="#0C0000"
                android:textSize="14sp" />

            <Button

                style="@android:style/Widget.Holo.Button.Borderless.Small"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="59dp"
                android:background="@drawable/btn"
                android:onClick="registerasclinic"
                android:text="regester as clinic"
                android:textColor="#000000" />

            <Button

                android:id="@+id/resetpass"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="-1dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="316dp"
                android:background="#00FFFFFF"
                android:onClick="reset"
                android:text="Forget Password ? "
                android:textColor="#070707"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/error"
                android:layout_width="263dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="142dp"
                android:textColor="#FF1111" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>