<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drsama3"
    tools:context=".resetpassActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="183dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Ahjiz li"
        android:textColor="#0E0E0E"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="275dp"
        android:layout_height="366dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:background="#B2FFFFFF"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:cardBackgroundColor="#B2FBFAEB"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="259dp"
            android:layout_height="405dp">

            <Button
                android:id="@+id/b"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="298dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/btn"
                android:onClick="relogin"
                android:text="reset" />

            <TextView
                android:id="@+id/ttv"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:fontFamily="monospace"
                android:text="reset password"
                android:textColor="#020202"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/resetpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="173dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#8D090909" />

            <EditText
                android:id="@+id/resetuseremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="-14dp"
                android:layout_marginRight="-14dp"
                android:ems="10"
                android:hint="username"
                android:inputType="textEmailAddress" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>